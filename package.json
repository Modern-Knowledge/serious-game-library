{
  "name": "serious-game-library",
  "version": "1.0.0",
  "description": "Library for serious game",
  "keywords": [],
  "author": "Modern Knowledge",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/modern-knowledge/bachelorarbeit/serious-game-library"
  },
  "scripts": {
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "pre-build": "rm -rf dist/",
    "build": "npm run pre-build && npm run build-ts",
    "build-ts": "tsc",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --runInBand --testTimeout=10000 --forceExit --coverage --verbose",
    "test:prod": "npm run tslint && npm run test -- --no-cache",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "delete-docs": "rm -rf docs/",
    "build-docs": "npm run delete-docs && typedoc"
  },
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "@types/node": "^10.11.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "jest": "^23.6.0",
    "lodash": "^4.17.15",
    "shelljs": "^0.8.3",
    "ts-jest": "^23.10.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-sonarts": "^1.9.0",
    "typedoc": "^0.15.0",
    "typescript": "~3.5.2"
  },
  "dependencies": {
    "moment": "^2.24.0"
  }
}
